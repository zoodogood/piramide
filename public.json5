/* Файл с основными настройками */
{
  // ignore — при открытии страницы алгоритм сразу-же будет выполняться (Откл-те если в процессе этого ваша страница крашится)
  "ignore": true,

  // Функциии окраски пирамидок
  // _weight — коэф. вероятности, что отобразится именно "этот" цвет
  // n — ширина (номер) плитки, size — максимально возможный номер
  "colors": [
    {
      "func": "hsl(${ random(255) }, 100%, 70%)",
      "_weight": 1
    },
    {
      "func": "hsl(${ random(50) + 190 }, ${Math.round(70 / size * n) + 30}%, 70%)",
      "_weight": 5
    },
    {
      "func": "hsl(${ random(50) }, 100%, 70%)",
      "_weight": 15
    },
    {
      "func": "n % 2 ? '#c6e44e' : '#70d729'",
      "_weight": 25
    }
  ],

  // Несколько плиток может перемещаться параллельно, что значительно повышает скорость, но снижает очевидность происходящего
  "multiMove" : true,
  // Будет ли вестись статистика
  "statistics": true,

  /* Константы */
  // Множитель скорости плиток
  "moveSpeed": 5

}
